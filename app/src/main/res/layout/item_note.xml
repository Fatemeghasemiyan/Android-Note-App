<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_itemNote_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_grey_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_itemNote_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_grey_24dp"
                android:layout_toStartOf="@+id/iv_itemNote_delete"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_itemNote_title"
                android:layout_width="match_parent"
                android:layout_height= "wrap_content"
                android:layout_toStartOf="@+id/iv_itemNote_edit"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                tools:text="Title"
                android:textSize="16sp"
                />


        </RelativeLayout>
        <TextView
            android:id="@+id/tv_itemNote_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="Description"/>
        <TextView
            android:id="@+id/tv_itemNote_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Date"
            android:textSize="12sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


